
<div class="row">
  <div class="span5 offset3 well">
    <legend>New to Simple Gym? Sign up!</legend>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= display_error_messages! %>
        <input class="span4" name="gym_name" placeholder="Gym Name" type="text">
        <input class="span4" name="user[name]" placeholder="Your Full Name" type="text">
        <%= f.email_field :email, :class => "span4", :placeholder => "Email Address" %>
        <%= f.password_field :password, :class => "span4", :placeholder => "Password" %>
        <%= f.password_field :password_confirmation, :class => "span4", :placeholder => "Confirm Password" %>

        <div><%= f.submit "Sign up", :class => "btn btn-success" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
